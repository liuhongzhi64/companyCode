.erys-home-button {
  display: flex;
  flex-direction: row;
  justify-items: center;
  align-items: center;
  position: relative;
}
.erys-home-button__inner-box {
  width: 100%;
  height: 100%;
  padding: 0 4px 0 4px;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-weight: bold;
}
.erys-home-button__avatar-box {
  width: 25px;
  height: 25px;
}
.erys-home-button__avatar-box>image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.erys-home-button__text-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  letter-spacing: 1px;
}
.erys-home-button__outter {
  margin: 0;
  padding: 0;
  border: none;
  background: #FFFF;
}
button::after{border:0}
.erys-home-button__loading {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.erys-home-button__loading>image {
  width: 20px;
  height: 20px;
}
.animation {
  animation: ratateLoading 1s linear infinite;
  -webkit-animation: ratateLoading 1s linear infinite;
}
@keyframes ratateLoading {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}
@-webkit-keyframes ratateLoading {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}
.erys-home-button__badge {
  width: 10px;
  height: 10px;
  position: absolute;
  right: 0;
  top: 0;
  background: red;
  border-radius: 50%;
}