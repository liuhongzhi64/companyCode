/* pages/zone/index.wxss */
.erys-zone__groups {
  display: flex;
  flex-direction: column;
}
.erys-zone__title-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.__title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.erys-card__box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}
.erys-card__box-text-margin {
  width: 360rpx;margin-top: 12rpx;
}
.erys-card__footer-text-border {
  border-right: 1px solid #E6E6E6;
}